# LangGraph App - Agent Server

# GigaChat configuration [обязательно]
GIGACHAT_CREDENTIALS=
GIGACHAT_SCOPE=GIGACHAT_API_PERS
GIGACHAT_VERIFY_SSL_CERTS=false
GIGACHAT_MODEL=GigaChat-2-Max

# city API ("Я Здесь Живу")
API_GEO=https://yazzh-geo.gate.petersburg.ru
API_SITE=https://yazzh.gate.petersburg.ru
REGION_ID=78

# Yandex Geocoder API
YANDEX_API_KEY=

# RAG configuration
DATA_DIR=./data
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K=5

# LangSmith observability [опционально]
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=city-assistant

# Agent settings
AGENT_LLM_TIMEOUT=60
AGENT_API_TIMEOUT=30
AGENT_RETRY_MAX_ATTEMPTS=3

# Server settings
HOST=0.0.0.0
PORT=2024
LOG_LEVEL=INFO
