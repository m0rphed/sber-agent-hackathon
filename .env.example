# GigaChat Configuration
GIGACHAT_MODEL=GigaChat-2
EMBEDDINGS_MODEL=EmbeddingsGigaR

GIGACHAT_CREDENTIALS=
GIGACHAT_SCOPE=
GIGACHAT_VERIFY_SSL_CERTS=

# RAG Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=200
TOP_K=5

RAG_USE_QUERY_REWRITING=true
RAG_USE_DOCUMENT_GRADING=true

# City API ("Я Здесь Живу")
API_GEO=https://yazzh-geo.gate.petersburg.ru
API_SITE=https://yazzh.gate.petersburg.ru
REGION_ID=78

# Yandex Geocoder API (для геокодирования метро и адресов)
# Получите ключ на https://developer.tech.yandex.ru/
YANDEX_API_KEY=

# LangSmith Observability (Optional but Recommended)
# Sign up at https://smith.langchain.com to get your API key
# Tracing provides: debugging, evaluation, monitoring of your LLM app
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=city-assistant
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ==============================================================================
# LangGraph Agent Server (for langgraph dev/up)
# ==============================================================================
# These are set automatically by Agent Server, but can be customized:
#
# REDIS_URI=redis://localhost:6379/0
# DATABASE_URI=postgres://user:pass@localhost:5432/langgraph

LOG_LEVEL=DEBUG
LOG_FORMAT=console
IS_DEBUG=true

LANGGRAPH_URL=http://localhost:2024

TOKEN_MAX=
TOKEN_TG=
